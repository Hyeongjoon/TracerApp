<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_sub1_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:useDefaultMargins="false"
    android:alignmentMode="alignBounds"
    >

    <ImageView
        android:id="@+id/main_sub1_imageView1"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:cropToPadding="true"
        />

    <ImageView
        android:id="@+id/main_sub1_imageView2"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:cropToPadding="true"
        />

    <ImageView
        android:id="@+id/main_sub1_imageView3"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:cropToPadding="true"
        />

    <ImageView
        android:id="@+id/main_sub1_imageView4"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:cropToPadding="true"
        />
    <TextView
        android:id="@+id/main_sub1_textView"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_gravity="fill"
        android:gravity="center"
        android:lines="1"
        android:text="TextView"
        android:layout_columnSpan="2"
        />
</GridLayout>