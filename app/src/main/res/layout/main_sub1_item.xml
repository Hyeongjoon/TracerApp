<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_sub1_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:useDefaultMargins="false"
    android:background="@drawable/group_outline">
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:background="@color/group_nameline_redgray">
        <TextView
            android:id="@+id/main_sub1_group_name"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:layout_gravity="fill"
            android:gravity="center"
            android:lines="1"
            android:text="Group1"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/main_sub1_group_num"
            android:drawableStart="@drawable/group_ico"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:layout_gravity="fill"
            android:gravity="center"
            android:lines="1"
            android:text="1"
            android:textSize="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/main_sub1_imageView1"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:scaleType="fitXY"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/group_outline"/>

    <ImageView
        android:id="@+id/main_sub1_imageView2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:scaleType="fitXY"
        android:layout_row="3"
        android:layout_column="1"
        android:background="@drawable/group_outline"/>

    <ImageView
        android:id="@+id/main_sub1_imageView3"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:scaleType="fitXY"
        android:layout_row="4"
        android:layout_column="0"
        android:background="@drawable/group_outline"/>

    <ImageView
        android:id="@+id/main_sub1_imageView4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:src="@drawable/none_profile"
        android:scaleType="fitXY"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@drawable/group_outline"/>
</GridLayout>