<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.tracer.LoginActivity"
    android:orientation="vertical"
    >

    <!--도입 문구 장행준 코쟁이-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추억의\n발자취를\n남겨보세요"
        android:textSize="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
    <!--id/pw 입력 부분-->
    <EditText
        android:id = "@+id/login_email"
        android:hint="이메일"
        android:maxLength="30"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id = "@+id/login_password"
        android:hint="비밀번호"
        android:maxLength="20"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id = "@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:onClick="Login_ButtonClick"
        />
    <!-- 계정을 잊으셨나요-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정을 잊으셨나요?"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:autoLink="none"
        />
    <!-- 또는 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------------또는-------------------"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />
    <!-- 연동하기-->
    <Button
        android:id = "@+id/login_facebook_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="페이스북"/>
        <!--android:drawableLeft="@drawable/"-->

    <Button
        android:id = "@+id/login_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카카오톡"/>
        <!--android:drawableLeft="@drawable/"-->
</LinearLayout>

