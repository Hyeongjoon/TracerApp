<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_info_item_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/group_info_item_imageview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        >
        <Button
            android:id="@+id/group_info_item_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_info_download"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/group_info_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_info_delete"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>