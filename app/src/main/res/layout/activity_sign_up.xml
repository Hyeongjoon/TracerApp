<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.tracer.SignUpActivity"
    android:orientation="vertical"
    >

    <!--도입 문구 장행준 코쟁이-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추억의\n발냄새를\n남겨보세요"
        android:textSize="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"/>
    <!--id/pw 입력 부분-->
    <EditText
        android:id="@+id/signUp_email"
        android:hint="  이메일"
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="#E2DDDD"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/signUp_name"
        android:hint="  이름"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2DDDD"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/signUp_password"
        android:hint="  비밀번호"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="#E2DDDD"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/signUp_password_confirm"
        android:hint="  비밀번호확인"
        android:maxLength="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="#E2DDDD"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/signUp_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:onClick="signUp_buttonClick"
        />

    <!-- 또는 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------------또는-------------------"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />
    <!-- 연동하기-->
    <Button
        android:id="@+id/signUp_facebook_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="페이스북으로 회원가입"

        />
    <!--android:drawableLeft="@drawable/"-->
    <Button
        android:id="@+id/signUp_kakao_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카카오톡으로 회원가입"

        />
    <!--android:drawableLeft="@drawable/"-->
</LinearLayout>

